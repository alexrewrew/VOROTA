/* TABLES */
table
  width 100%
  margin-bottom 43px
  thead {}
  tbody {}
  tfoot {}
  caption {}
  tr
    border-bottom 2px solid $white
    width 100%
  th {}
  td
    color $black-text
    line-height: 2.18;
    font-size .875em
    font-weight 300
    &:first-child
      width 88%
    &:last-child
      width 12%


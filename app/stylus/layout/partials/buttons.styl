@import "../../utilities/vars"
@import "../../utilities/mixins"

/* BUTTON */
button {}

.button
  max-width 263px
  width 100%
  background $gray-back3
  display block
  text-align center
  color $white
  font-size: 1.563em
  letter-spacing: 0.7px;
  font-weight 600
  padding 11px 0 13px
  cursor pointer
  border none
  transitions()
  &:hover
    background $red
    color $white
    img
      transform translateX(10px)
  &:focus
    outline none
  img
    margin-left 18px
    transitions()

.button-red
  background $red
  line-height: 1.56;
  letter-spacing: 0.4px;
  font-size 1.125em
  &:hover
    background $gray-back3

.button-small
  font-size 1.125em
  max-width 195px
  padding-top 10px

.button-all
  +portrait()
    margin 0 auto 80px
  +mobile()
    max-width unset
    margin-bottom 0px
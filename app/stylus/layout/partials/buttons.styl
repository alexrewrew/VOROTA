@import "../../utilities/vars"
@import "../../utilities/mixins"

/* BUTTON */
button {}

.button
  max-width 263px
  width 100%
  background $gray-back3
  display block
  text-align center
  color $white
  font-size: 1.563em
  letter-spacing: 0.7px;
  font-weight 600
  padding: 7px 0 9px;
  cursor pointer
  border none
  line-height: 1.56;
  transitions()
  &:hover
    background $red
    color $white
    img
      transform translateX(10px)
  &:focus
    outline none
    color $white
  img
    margin-left 18px
    transitions()

.button-red
  background $red
  font-size 1.125em
  &:hover
    background $gray-back3

.button-small
  font-size 1.125em
  max-width 195px

.button-all
  padding: 12px 0 15px;
  +portrait()
    margin 0 auto 80px
  +mobile()
    max-width unset
    margin-bottom 80px

.button-comment
  font-size 1.125em
  margin 0 auto
  line-height: 1.56;
  letter-spacing: 0.4px;
  padding-top 12px
  padding-bottom 15px

.button-specs
  max-width 320px
  text-decoration none
  line-height: 1.56;
  letter-spacing: 0.4px;
  font-size 1.125em
  text-align center
  margin-bottom 54px
  img
    width 17px
    margin-right 20px
    margin-left 0
    margin-bottom 5px
  &:hover
    img
      transform none
@import "../../utilities/vars"
@import "../../utilities/mixins"

/* FOOTER */
footer
  background $black-back
  padding-top 65px
  margin-top 151px
  h4
    position relative
    padding-bottom 17px
    letter-spacing 1.1px
    color $white
    font-size 1.125em
    margin-bottom 14px
    &:after
      pseudo(block,absolute)
      background $red
      width: 32px;
      height: 2px;
      bottom 0
      left 0
  p
    font-size: .75em
    line-height: 1.83
    color $gray-text2
  .menu-footer
    margin-bottom 25px
    li
      a
        font-size: .75em
        line-height: 1.83
        color $gray-text2
        &:hover
          color $red
  .address
    a
      display inline-block
      margin 0 4px
      color $gray-text2
      &:hover
        color $red
  .social-links
    display flex
    flex-wrap nowrap
    flex-direction row
    padding 14px 0
    li
      margin-right 20px
      a
        color $black-back
        background $red
        text-align center
        display block
        padding-top 3px
        width: 24px;
        height: 24px;
        border-radius 50%
        &:hover
          background $trans
          color $red
  .footer-copyright
    border-top 2px solid $red
    position relative
    margin-top 27px
    justify-content space-between
    padding-top 11px
    padding-bottom 1px
    &:before
      pseudo(block, absolute)
      width 15px
      background $black-back
      height 2px
      top -2px
      left 0
    &:after
      pseudo(block, absolute)
      width 15px
      background $black-back
      height 2px
      top -2px
      right 0

.copyright
  text-align right
  .volta
    svg
      margin-left 4px
      position relative
      top 3px
      g
        transitions()
        fill $white
    &:hover
      svg g
        fill $red
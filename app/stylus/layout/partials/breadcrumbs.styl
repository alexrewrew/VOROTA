.breadcrumbs
  display flex
  flex-direction row
  flex-wrap nowrap
  margin-bottom: 38px
  +mobile()
    margin-bottom 15px
    //flex-wrap wrap
    overflow hidden
    position relative
    //&:after
    //  display block
    //  position absolute
    //  content '...'
    //  color $gray-text2
    //  background $gray-back
    //  right 0
    //  top -3px
    //  padding-left 2px
    &:last-child
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis
  li
    position relative
    margin-right 7px
    +mobile()
      margin-bottom 10px
    &:after
      pseudo(block, absolute)
      top 0
      right 0
      background $gray-text
      width 1px
      height 100%
      transform rotate(15deg)
    &:last-child
      &:after
        display none
    a
      font-size .75em
      color $gray-text
      display block
      letter-spacing: 1px
      margin-right 7px
      overflow hidden
      white-space: nowrap;
      text-overflow: ellipsis
      &:hover
        color $red
    p
        line-height: normal;
        font-weight: normal;
        font-size: .75em;
        color: #a9a9a9;
        display: block;
        letter-spacing: 1px;
        margin-right: 7px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        margin-bottom: 0;
        padding-bottom: 0;



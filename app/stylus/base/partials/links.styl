@import "../../utilities/vars"
@import "../../utilities/mixins"

/* LINKS */
a
  text-decoration none
  transitions()
  &:hover
    text-decoration none
  &:focus
    text-decoration none
    outline none

.link-up
  position fixed
  right 15px
  bottom 15px
  width 30px
  height 30px
  display flex
  justify-content center
  align-items center
  opacity 0

.link-up.visible
  opacity 1

.link-home
  padding 2px
  display inline-block
  margin 0 8px
  svg g
    fill $black
    transitions()
  &:hover
    svg g
      fill $gray-text7

.link-search
  float right
  position relative
  z-index 10
  padding 2px
  margin: 0 8px;
  display block
  +mobile()
    float left
    margin 0

.link-search.active
  svg g
    fill $black !important

.link-more--wa
  height 14px
  position relative
  margin-bottom 10px
  color $red
  width 32px
  transitions()
  &-text
    position absolute
    right: 54px;
    font-size: .75em
    color $red
    opacity 0
    letter-spacing: 1px;
    min-width 100px
    transitions()
  &-arrow
    transitions()
    position absolute
    background red
    width: 32px;
    height: 2px
    top: 7px
    right 0
    &:before
      pseudo(block, absolute)
      background $red
      bottom -1px
      right 2px
      width 2px
      height 8px
      transform rotate(-45deg)
      opacity 0
      transitions()
    &:after
      pseudo(block, absolute)
      background $red
      bottom -5px
      right 2px
      width 2px
      height 8px
      transform rotate(45deg)
      opacity 0
      transitions()

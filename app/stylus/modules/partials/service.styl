.service-block
  background $white
  padding 44px 48px 48px
  +mobile()
    padding-left 30px
    padding-right 30px
  h2
    color $red
    font-weight 500
  h3
    color #B1B1B1
    font-weight 500
    line-height normal
    margin-bottom 0
  hr
    background $gray-back
  p
    margin-bottom 25px

.service-block.small
  padding 30px 48px
  .button-all
    +portrait()
      margin-bottom 0
  +mobile()
    padding-left 20px
    padding-right 20px
    h3
      margin-bottom 24px
      text-align center
    .button-all
      margin-bottom 30px

.service-block.wired
  padding 0
  height: 115px
  margin-bottom 24px
  +mobile()
    height auto
  .row
    height 100%

    .col-md-6
      height 100%
      display flex
      align-items center
      +mobile()
        height: 100px
    +mobile()
      .back-red
        margin 0 15px
    .wired-col
      padding-left 48px
      +mobile()
        padding-left 15px
      h3
        color $black
        +mobile()
          text-align center
          width 100%

  .link-wired
    display block
    background $red
    color $white
    font-size: 1.625em
    font-weight: 600
    text-decoration none
    text-align center
    width 100%



.service-description
  margin-left 50px
  padding-top 56px
  padding-bottom 94px
  +portrait()
    margin-left 0
  +mobile()
    margin-left 0
  h2
    text-align left
    margin-bottom 24px
.service-description.last
  padding-bottom 40px

.service-accordion
  border-top 1px solid #f1f1f1
  border-bottom 1px solid #f1f1f1
  font-size: 1.625em
  font-weight: 500;
  color: $red;
  padding 18px 0 20px
  display block
  margin-top 43px
  position relative
  +mobile()
    font-size 1.25em
  .fa
    position absolute
    right 20px
    top 22px
    transitions()
  &:hover
    color $gray-text2
    .fa
      color $gray-text2
  &:focus
    color $gray-text2

.service-accordion.active
  .fa
    transform rotate(180deg)


.service-accordion--panel
  display none

  padding-top 70px

  table th
    color $black
    +mobile()
      font-size 1.25em

  table tr
    border-bottom-color #f1f1f1

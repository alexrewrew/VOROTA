.discount
  display block
  position relative
  +portrait()
    margin-bottom 50px
  +mobile()
    margin-bottom 50px
  +mobile()
    margin-bottom 10px
  &--image-container
    height 220px
    display flex
    justify-content center
    align-items center
    overflow hidden
    img
      height 220px
  &--title
    position absolute
    left 0
    right 0
    bottom 0
    background rgba(26,26,26, .58)
    height 103px
    padding 12px 0 10px 34px
    +tablet()
      padding-left 15px
    p
      color $white
      font-size 1.25em
      font-weight 300
  .button-small
    position absolute
    bottom -22px
    background $red
    opacity 0
    left 34px
    right 34px
    max-width calc(100% - 68px)
    width 100%
    +tablet()
      opacity 1
      left 24px
      right 24px
      max-width calc(100% - 48px)
    +portrait()
      opacity 1
    +mobile()
      opacity 1
  &:hover
    .button-small
      opacity 1

.discount-green
  .button-small
    background $green-back


.discount.discount-big
  height 423px
  max-width 263px
  .discount--image-container
    height 400px
    img
      height 100%
  .discount--title
    height 143px
    right 34px
    padding 32px 22px 32px 16px
    bottom 23px
    .button-small
      opacity 1
      right 34px
      max-width: 195px
      font-size 1.125em

.discount-all
  display inline-block
  text-align center
  color $red
  margin-left 33px
  letter-spacing: 1.3px;
  font-size 1em
  font-weight 500
  margin-bottom 89px
  +mobile()
    margin 0 auto
    display: block
  +portrait()
    margin-bottom 0
  img
    margin-left 25px
    transitions()
  &:hover
    color $red
    img
      transform translateX(10px)

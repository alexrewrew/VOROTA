.product
  cursor pointer
  display block
  margin-bottom 50px
  +mobile()
    margin-bottom 100px
  &--image-container
    height 220px
    width 100%
    display flex
    justify-content center
    align-items center
    overflow hidden
    margin-bottom 31px
    position relative
    &-top
      position absolute
      right 0
      top 0
      background $red
      color $white
      line-height: 1;
      font-size 1.25em
      width 68px
      text-transform lowercase
      text-align center
      padding-bottom 6px
      z-index 10
    img
      max-height 220px
      opacity .6
      transitions()
      +portrait()
        opacity 1
      +mobile()
        opacity 1
  &--tech
    display flex
    flex-direction row
    flex-wrap nowrap
    padding 9px 0
    margin-bottom 27px
    li
      margin-right 16px
      img
        height 26px
        filter grayscale(100%)
        opacity .5
        transitions()
        +portrait()
          filter grayscale(0%)
          opacity 1
        +mobile()
          filter grayscale(0%)
          opacity 1
  h3
    height 60px
    overflow hidden
  .button
    +portrait()
      max-width 100%
      background $red
    +mobile()
      max-width unset
      margin 0 auto
      background $red
  &:hover
    .product--tech
      li
        img
          filter grayscale(0%)
          opacity 1
    .button
      background $red
      color $white
    .product--image-container
      img
        opacity 1

.product-green
  +mobile()
    .button
      background $green-back
  +portrait()
    .button
      background $green-back
  &:hover
    .button
      background $green-back

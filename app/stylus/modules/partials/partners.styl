.partners-list
  display flex
  flex-wrap wrap
  flex-direction row
  margin-bottom 20px
  li
    line-height: 1.57;
    font-weight 300
    font-size .875em
    position relative
    padding-left 23px
    padding-right 10px

    &:before
      pseudo(block, absolute)
      width: 10px;
      height: 2px;
      top 8px
      left 0
      background $red

.partner
  border-top 2px solid $white
  display flex
  flex-direction row
  flex-wrap nowrap
  padding 42px 0 0
  +mobile()
    flex-wrap wrap
  &:last-child
    border-bottom 2px solid $white
    margin-bottom 28px
  &--description
    flex 1 1 64%
    max-width 64%
    +mobile()
      flex 1 1 100%
      max-width 100%
    a
      font-weight 500
      font-size: 1.25em
      line-height: 1.3;
      text-decoration underline
      color $red
      margin-bottom 25px
      display block
      &:hover
        text-decoration none
    p
      margin-bottom 30px
  &--logo
    flex 1 1 36%
    max-width 36%
    text-align center
    +mobile()
      flex 1 1 100%
      max-width 100%
    img
      max-width 100%
      margin 20px 0
      +mobile()
        margin: 20px 0 60px;
.calc-row
  margin-bottom 63px
  +mobile()
    margin-bottom 20px
  .col
    &:first-child
      flex 1 1 78%
      max-width 78%
      +mobile()
        flex 1 1 100%
        max-width 100%
        margin-bottom 30px
    &:last-child
      flex 1 1 22%
      max-width 22%
      +mobile()
        flex 1 1 100%
        max-width 100%
  +portrait()
    .button
      margin-bottom 0

.calc-result
  +mobile()
    width 100%
  .calc-discount
    text-decoration line-through
    font-weight 600
    font-size 1em
    margin-bottom 7px
  .calc-price
    font-weight 600
    font-size 1.375em
    margin-bottom 22px
  .calc-description
    color $gray-text
    font-size .875em
    margin-bottom 32px
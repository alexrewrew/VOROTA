.filter-container
  margin-bottom 80px
  +portrait()
    margin-bottom 50px
  +mobile()
    margin-bottom 100px
  .filter-container--checkbox
    padding 13px 0
    text-align center
    margin-bottom 2px
    +portrait()
      margin-bottom 0
      padding: 11px 0 7px
  .button-red
    margin-top 10px
    font-weight: 500;
    padding: 12px 0 14px;
    +portrait()
      margin-top 0
      line-height normal
    +mobile()
      margin-top 0
      max-width unset

.filter-calculator.active
  &:after
    opacity 0
    height 0

.filter-calculator
  position relative
  &:after
    pseudo(block, absolute)
    top 0
    right 0
    left 0
    height 100%
    background $gray-back
    z-index 100
    opacity .7
    transitions()
    //
    display none
    //

  .row
    justify-content space-between
    +portrait()
      justify-content flex-start
  .select-container
    margin-bottom 35px

  .chosen-container-single.chosen-container-active.chosen-with-drop
    .chosen-single
      &:after
        transform rotate(180deg)

  .chosen-container-single .chosen-single
    padding: 10px 20px 11px;
    font-weight 300

    position relative
    &:after
      triangle($black-text, down, 4px)
      top calc(50% - 2px)
      right 18px
      transitions()


    span
      margin-right 15px
  .chosen-container .chosen-results .active-result, .chosen-container .chosen-results .disabled-result
    padding: 10px 20px 11px;
    font-weight 300
  .chosenImage-container.chosen-container .chosen-results .active-result
    padding: 10px 30px 11px 60px;
    background-position: 20px 8px;
  p
    color $gray-text
    margin-bottom 6px
    font-size .875em
  .small-col.left
      padding-right 4px
      +portrait()
        padding-right 15px
  .small-col.right
      padding-left 4px
      +portrait()
        padding-left 15px
  .filter-colors
    display flex
    justify-content flex-start
    width: calc(100% + 15px);
    flex-direction row
    flex-wrap wrap
    margin-bottom 25px
    +portrait()
      width 100%
    +mobile()
      width 100%
    li
      margin-bottom 10px
      margin-right 10px
      +mobile()
        margin-right 14px
      +tablet()
        &:last-child
          flex: 1 1 calc(100% - 55px);
          max-width: calc(100% - 55px);
      a
        display block
        width 45px
        height 45px
        background $red
        opacity .8
        position relative
        &:after
          pseudo(block, absolute)
          width 45px
          height 45px
          background $trans
          border 3px solid $trans
          z-index 3
          top 0
          left 0
          transitions()
          +mobile()
            width 55px
            height 55px
        +mobile()
          width 55px
          height 55px
        &:hover
          opacity 1
          &:after
            border-color $red
      .active
        opacity 1
        &:after
          border-color $red
  .filter-options
    display flex
    justify-content flex-start
    flex-direction row
    flex-wrap wrap
    margin-bottom 10px
    width calc(100% + 35px)
    +portrait()
      flex-wrap nowrap
      width 100%
    +mobile()
      width 100%
    li
      flex 1 1 68px
      max-width 68px

      margin-right 30px

      +portrait()
        flex 1 1 100%
        max-width 100%
      +mobile()
        margin-right: 25px;
      a
        margin-bottom 17px
        display block
        position relative
        +portrait()
          display flex
          flex-direction row
        &:after
          pseudo(block, absolute)
          width 68px
          height 60px
          background $trans
          border 3px solid $trans
          z-index 3
          top 0
          left 0
          transitions()
        img
          margin-bottom 5px
          opacity .8
          transitions()
          width 68px
          height 60px
        p
          font-size 12px
          line-height: 1.17;
          word-wrap: break-word;
          +portrait()
            margin-right 10px
            margin-left 10px
          +mobile()
            word-wrap: break-word;
        &:hover
          border-color: transparent;
          img
            opacity 1
          &:after
            border-color $red
      .active
        img
          opacity 1
        &:after
          border-color $red